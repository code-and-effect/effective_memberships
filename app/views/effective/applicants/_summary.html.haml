.card
  .card-body
    .row
      .col-sm
        %h5.card-title= applicant

      .col-sm-auto.text-right
        /= link_to('Edit', effective_memberships.applicant_build_path(:select)) if edit_applicants_wizard?

    %table.table
      %tbody
        %tr
          %th Applicant
          %td= render 'effective/applicants/user', applicant: applicant, user: applicant.user

        - if request.path.start_with?('/admin')
          %tr
            %th User
            %td= link_to(applicant.user, edit_admin_user_path(applicant.user))

        - if applicant.from_membership_category.present?
          %tr
            %th From Membership Category
            %td= applicant.from_membership_category

        %tr
          %th Membership Category
          %td= applicant.membership_category

        - if applicant.orders.present?
          %tr
            %th Orders
            %td
              - applicant.orders.each do |order|
                = link_to(order, effective_orders.order_path(order))

        %tr
          %th Status
          %td
            %p
              %span.badge.badge-secondary= applicant.status
            %p= applicant.summary
